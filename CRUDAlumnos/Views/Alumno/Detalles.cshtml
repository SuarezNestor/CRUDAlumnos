@model CRUDAlumnos.Models.Alumno

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>Alumno</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre Completo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>

        <dt>
            Edad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Edad)
        </dd>

        <dt>
            Sexo
        </dt>

        <dd>
            @if (Model.Sexo == "M")
            {
                <span>Masculino</span>
            }
            else
            {
                <span>Femenino</span>
            }
        </dd>

        <dt>
            Fecha Registro
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
        <dt>
            Codigo Ciudad
        </dt>
        <dd>
            @CRUDAlumnos.Controllers.AlumnoController.NombreCiudad(Model.CodCiudad)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Editar", new { id = Model.Id }) |
    @Html.ActionLink("Atras", "Index")
</p>
